              },
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"quantity\": 2\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/cart/PRODUCT_ID_HERE",
              "host": ["{{base_url}}"],
              "path": ["api", "cart", "PRODUCT_ID_HERE"]
